<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CarDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/customDark"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:text="Payment Details"
            app:fontFamily="@font/muli_bold"
            android:textSize="16sp" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
               android:layout_margin="20dp"
                android:text="Your payment has been successfully completed. Active reservation bookings can be found in yor transaction history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:ellipsize="end"
                app:fontFamily="@font/muli_semibold"
                android:layout_marginStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightDark"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Order Details"
                app:fontFamily="@font/muli_bold" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Car Name"
                    app:fontFamily="@font/muli_semibold" />
                <TextView
                    android:id="@+id/car_name"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Car Name"
                    app:fontFamily="@font/muli_semibold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Item ID"
                    app:fontFamily="@font/muli_semibold" />
                <TextView
                    android:id="@+id/item_id"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Fuel"
                    app:fontFamily="@font/muli_semibold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Daily Price"
                    app:fontFamily="@font/muli_semibold" />
                <TextView
                    android:id="@+id/daily_price"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Daily Price"
                    app:fontFamily="@font/muli_semibold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Status"
                    app:fontFamily="@font/muli_semibold" />
                <TextView
                    android:id="@+id/status"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightDark"
                    android:ellipsize="end"
                    android:text="Fuel"
                    app:fontFamily="@font/muli_semibold" />
            </LinearLayout>
            <Button
                android:id="@+id/return_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@android:color/holo_red_dark"
                android:fontFamily="@font/muli_bold"
                android:text="@string/back_to_home"
                android:textColor="@drawable/text_selector" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>