<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="6dp"
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_car"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="230dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/category"
                android:gravity="center"
                android:fontFamily="@font/muli_bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/customDark"
                android:text="Toyota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/car_name"
                android:fontFamily="@font/muli_semibold"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:textColor="@color/customDark"
                android:text="Avensis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srb_starSize="16dp"
            app:srb_numberOfStars="5"
            app:srb_starBorderWidth="1.5"
            app:srb_rating="4"
            app:srb_stepSize="0.5"
            app:srb_borderColor="@color/dark_gray"
            app:srb_fillColor="@android:color/holo_red_light" />
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/daily_price"
                android:fontFamily="@font/muli_bold"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_red_light"
                android:text="200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/muli_semibold"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:textColor="@color/customDark"
                android:text="Daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>