<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_marginBottom="60dp"
        android:id="@+id/scrollView2"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:src="@drawable/car_dash"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                app:cardBackgroundColor="@android:color/white"
                android:layout_below="@+id/image"
                android:padding="30dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text1"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/customDark"
                        android:text="Car Rental and Leasing Service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text2"
                        android:layout_below="@+id/text1"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/customDark"
                        android:text="22b Iholma Street, Rivers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_below="@+id/card1"
                android:padding="30dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text3"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/customDark"
                        android:text="BUSINESS NAME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text4"
                        android:layout_below="@+id/text3"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/customDark"
                        android:text="Car Rental and Leasing Services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text5"
                        android:layout_below="@+id/text4"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/customDark"
                        android:text="WHAT WE DO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:padding="8dp"
                        android:id="@+id/text6"
                        android:layout_marginBottom="30dp"
                        android:layout_below="@+id/text5"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/customDark"
                        android:text="We specialize in offering or client to best car rental and leasing services. Our customers comfort and pleasure is the corner stone of our business."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/layout1"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/sign_in"
            android:layout_marginEnd="3dp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold"
            android:text="Contact Us"
            android:textColor="@drawable/text_selector"
            android:layout_marginRight="5dp" />
        <Button
            android:id="@+id/register"
            android:layout_marginStart="3dp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold"
            android:text="Call"
            android:textColor="@drawable/text_selector"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
</RelativeLayout>